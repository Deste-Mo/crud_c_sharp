@model ProjetWebMVC.Models.Produit
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Supprimer un Produit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h1>Supprimer un Produit</h1>
        <h3>Êtes-vous sûr de vouloir supprimer ce produit ?</h3>
        <dl class="row">
            <dt class="col-sm-2">Nom</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Nom)</dd>
            <dt class="col-sm-2">Prix</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Prix)</dd>
            <dt class="col-sm-2">Quantité</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantite)</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Supprimer</button>
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>